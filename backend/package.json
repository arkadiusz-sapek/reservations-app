{
    "name": "reservations-backend",
    "version": "0.0.1",
    "description": "",
    "author": "arek",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch --watchAssets",
        "start:hmr": "nest build --webpack --webpackPath webpack-hmr.config.js --watchAssets",
        "start:debug": "nest start --debug --watch --watchAssets",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "ts-node ./node_modules/typeorm/cli.js",
        "migration:generate": "npm run typeorm migration:generate -- -n Migration",
        "migration:run": "npm run typeorm migration:run",
        "migration:revert": "npm run typeorm migration:revert",
        "seed": "ts-node -r tsconfig-paths/register src/seed.ts"
    },
    "dependencies": {
        "@nestjs/common": "8.0.4",
        "@nestjs/config": "1.0.1",
        "@nestjs/core": "8.0.4",
        "@nestjs/jwt": "8.0.0",
        "@nestjs/passport": "8.0.0",
        "@nestjs/platform-express": "8.0.5",
        "@nestjs/platform-ws": "7.4.4",
        "@nestjs/sequelize": "8.0.0",
        "@nestjs/serve-static": "2.1.3",
        "@nestjs/swagger": "5.0.9",
        "@nestjs/terminus": "7.0.1",
        "@nestjs/typeorm": "^8.0.1",
        "@nestjs/websockets": "7.4.4",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cookie-parser": "1.4.5",
        "csurf": "1.11.0",
        "express-rate-limit": "5.1.3",
        "express-winston": "4.0.5",
        "helmet": "4.1.1",
        "nest-winston": "1.4.0",
        "passport": "0.4.1",
        "passport-jwt": "4.0.0",
        "passport-local": "1.0.0",
        "pg": "8.4.1",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.3.0",
        "sequelize": "6.3.5",
        "sequelize-typescript": "2.0.0-beta.0",
        "swagger-ui-express": "4.1.6",
        "typeorm": "^0.2.35",
        "winston": "3.3.3",
        "ws": "7.3.1",
        "yargs": "^17.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "8.1.0",
        "@nestjs/schematics": "8.0.2",
        "@nestjs/testing": "8.0.5",
        "@types/express": "4.17.13",
        "@types/faker": "^5.5.7",
        "@types/jest": "26.0.14",
        "@types/node": "16.4.8",
        "@types/passport-jwt": "3.0.3",
        "@types/passport-local": "1.0.33",
        "@types/sequelize": "4.28.9",
        "@types/supertest": "2.0.10",
        "@types/ws": "7.2.7",
        "@types/yargs": "^17.0.2",
        "@typescript-eslint/eslint-plugin": "3.10.1",
        "@typescript-eslint/parser": "3.10.1",
        "eslint": "7.10.0",
        "eslint-config-prettier": "6.12.0",
        "eslint-plugin-import": "2.22.1",
        "faker": "^5.5.3",
        "jest": "26.5.2",
        "prettier": "1.19.1",
        "start-server-webpack-plugin": "2.2.5",
        "supertest": "6.1.4",
        "ts-jest": "26.4.1",
        "ts-loader": "6.2.2",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typescript": "4.3.5",
        "webpack-node-externals": "3.0.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
